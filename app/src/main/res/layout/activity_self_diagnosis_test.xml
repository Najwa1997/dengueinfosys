<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0E0E6"
    tools:context=".SelfDiagnosisTestActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="206dp"
        android:layout_height="220dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="103dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sthetoscope" />

    <Button
        android:id="@+id/B_Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:layout_marginTop="50dp"
        android:text="Start Diagnosis Test"
        android:layout_below="@+id/textView"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/B_Record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Record Your Medical Data"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/B_Start"/>

    <Button
        android:id="@+id/B_MoreSym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="Know More About Dengue Symptom"
        android:layout_below="@+id/B_Record"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to our Self-Diagnosis Test"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="25dp"/>
    </RelativeLayout>

</LinearLayout>